<% unless locals.empty? %>
  <%= message %>
<% end %>

<h1>Create a New Figure</h1>

<form action="/figures" method="POST">

  <p><label>Name:</label></p>
  <p><input type="text" name="figure[name]" id="figure_name"></input></p>

  <p><label>Choose the landmark(s):</label></p>
  <%Landmark.all.each do |landmark| %>
  	<p><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"><%=landmark.name%></input></p>
  <%end%>

  <p><label>Or Create a New Landmark:</label></p>
  <p><input  type="text" name="landmark[name]" id="new_landmark"></input></p>

<p><label>Choose the title(s):</label></p>
  <%Title.all.each do |title| %>
    <p><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>"><%=title.name%></input></p>
  <%end%>

  <p><label>Or Create a New Title:</label></p>
  <p><input  type="text" name="title[name]" id="new_title"></input></p>

 
  <p><input type="submit" value="Create New Figure"></p>
</form>