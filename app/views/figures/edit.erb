<h1>Edit a Figure</h1>
 
<form action="/figures/<%=@figure.id%>" method="POST">
	<input id="hidden" type="hidden" name="_method" value="patch"></input>
  
  <p><label>Figure Name:</label></p>
	<p><input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></input></p>
	
	<p><label>Landmark(s):</label></p>
 	
  <%Landmark.all.each do |landmark|%>
    <p><input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id%>" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name%></input></p>
  <%end%>
 
  <p><label>New Landmark:</label></p>
  <p><input  type="text" name="landmark[name]" id="new_landmark"></input></p>

  <p><label>Title(s):</label></p>
 	
  <%Title.all.each do |title|%>
    <p><input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id%>" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %>><%= title.name%></input></p>
  <%end%>
 
  <p><label>New Title:</label></p>
  <p><input  type="text" name="title[name]" id="new_title"></input></p>



  <p><input type="submit" value="Edit Figure"></input></p>
</form>